
<div class="container">


     <div class="section-header">
       <h3 class="h3 section-title"><%= book_page_heading(yield(:heading)) %></h3>
     </div>
     <div class="section-body">
       <% if @books.present? %>
           <div class="table-responsive">
             <table class="table table-striped">
               <thead>
               <tr class="text-center">
                 <th>ISBN</th>
                 <th>Title</th>
                 <th>Author</th>
                 <th>Category</th>
                 <th>Publisher</th>
                 <th>Copyright Date</th>
               </tr>
               </thead>
               <tbody>
               <% @books.each do |book|%>
                   <tr>
                     <td><%= book.isbn %></td>
                     <td><%= book.title %></td>
                     <td><%= book.author %></td>
                     <td><%= book.category %></td>
                     <td><%= book.publisher %></td>
                     <td><%= book.copyright %></td>
                     <% if is_admin? %>
                         <td><%= link_to "Edit", edit_book_path(book.isbn), remote: true, class: "btn btn-default model-books" %></td>
                     <% end %>
                   </tr>
               <% end %>
               </tbody>
             </table>
           </div>

       <% else %>
           <h4 class="h4 col-sm-6 text-warning">No Books Found!</h4>
       <% end %>
     </div>
     <div class="section-footer text-center">
       <%= will_paginate @books, renderer: BootstrapPagination::Rails %>

     </div>
   </div>

