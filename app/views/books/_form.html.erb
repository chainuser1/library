<div class="modal-dialog col-md-offset-1">

  <div class="modal-content">
    <div class="modal-header">
      <h3 class="text-center"><%= book_page_heading(yield(:heading)) %></h3>
    </div>
    <%= form_for @book, remote: true, html: { style: "display:inline;" } do |f| %>
        <div class="modal-body">
          <div class="alert" id="puncture"></div>
          <div class="form-group">
            <%= f.label :isbn %>
            <%= f.text_field :isbn, class:"col-md-3 form-control "  %>
          </div>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class:"form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :author %>
            <%= f.collection_select(:author, Author.all.order('name ASC'), :id, :name)  %>
          </div>
          <div class="form-group">
            <%= f.label :category %>
            <%= f.collection_select(:category, BookType.all.order('category ASC'), :category, :category)  %>
          </div>
          <div class="form-group">
            <%= f.label :publisher %>
            <%= f.text_field :publisher, class:"form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :copyright %>
            <%= f.date_select :copyright, class:"form-control", :start_year=>Time.now.year-300, :end_year=>Time.now.year  %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class:"form-control" %>
          </div>

        <div class="modal-footer">
          <%= f.submit class: "btn btn-primary" %>
          <button class="btn btn-warning" data-dismiss="modal" aria-label="Close">Cancel</button>
        </div>
    <% end %>
  </div>
</div>
</div>