<div class="panel">
  <div class="panel-heading" >
    <div class="navbar navbar-default">
     <div class="container-fluid">
       <div class="navbar-header">
         <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#toggle-options" aria-expanded="false">
           <span class="sr-only">Toggle navigation</span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
           <span class="icon-bar"></span>
         </button>
         <a class="navbar-brand" href="#"><h2><%= current_user.username %></h2><span class="badge glyphicon glyphicon-apple"></span></a>
       </div>
       <div class="collapse navbar-collapse " id="toggle-options">
         <ul class="nav navbar-nav">
           <li><%= link_to 'Edit', change_profile_path(CGI.escape_html(current_user.username)),method: :get%></li>
           <li><%= link_to 'Delete Account', delete_profile_path(CGI.escape_html(current_user.username)), method: :delete %></li>
         </ul>
       </div>
     </div>
    </div>
  </div>
  <div class="panel-body col-sm-6">

    <div class="thumbnail img-thumbnail">
      <label>Name: </label>
      <p class="input-sm"><%= @profile.lname%>, <%= @profile.fname%></p>
    </div>
    <div class="thumbnail img-thumbnail">
      <label>Gender: </label>
      <p class="input-sm"><%= @profile.gender %></p>
    </div>
    <div class="thumbnail img-thumbnail">
      <label>Email:  </label>
      <p class="input-sm"><%= @profile.email %></p>
    </div>
    <div class="thumbnail img-thumbnail">
      <label>Address: </label>
      <p class="input-sm"><%= @profile.address %></p>
    </div>
    <div class="thumbnail img-thumbnail">
      <label>Birthdate: </label>
      <p class="input-sm"><%= @profile.birthdate.to_formatted_s(:long) %></p>
    </div>
  </div>
</div>