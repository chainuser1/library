<div class="panel col-md-7 col-md-offset-3">
  <div class="panel-heading">
    <h4 class="text-center"><%= profile_page_heading(yield(:heading)) %></h4>
  </div>
  <%= form_for(@profile, url: profile_url) do |f| %>
     <div class="panel-body">
       <% if @profile.errors.any? %>
           <div class="alert alert-danger">
             <button class="glyphicon glyphicon-alert pull-right" data-dismiss="alert">&times;</button>
              <h5><%= pluralize(@profile.errors.count,'error ') %>
              prevented saving your profile:</h5>
             <ul>
               <% @profile.errors.full_messages.each do |message| %>
                  <li><%=message %></li>
               <% end %>
             </ul>
           </div>
       <% end %>
       <div class="form-group">
         <%= f.hidden_field :user_username, :default=>current_user.username %>
         <%= f.text_field :fname,class:"form-control",'placeholder'=>'First name:' %>
       </div>
       <div class="form-group">
         <%= f.text_field :lname,class:"form-control",'placeholder'=>'Last name:' %>
       </div>
       <div class="form-group">
         <% collection_gender={'Male'=>'Male','Female'=>'Female'} %>
         <%= f.label :gender %>
         <%= f.select(:gender, collection_gender , class:"form-control") %>
       </div>
       <div class="form-group">
         <%= f.text_field :email,class:"form-control",'placeholder'=>'Email Address' %>
       </div>
       <div class="form-group">
         <%=f.text_area :address, class:"form-control", placeholder:"Mailing Address" %>
       </div>
       <div class="form-group">
         <%= f.label :birthdate %>
         <%= f.date_select :birthdate, :start_year=>Time.now.year-13,:end_year=>Time.now.year-100 %>
       </div>
     </div>
      <div class="panel-footer pull-right">
        <%=f.submit class:"btn btn-primary" %>
        <input type="reset" value="Reset" class="btn btn-warning">
      </div>
  <% end %>
</div>