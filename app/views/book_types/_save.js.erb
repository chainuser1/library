$("#puncture").html("")
<% if @book_type.errors.any? %>
 $("#puncture").addClass("alert-danger")
$("#puncture").append("<p>")
        .html("<%= @book_type.category %> has failed to save")
        .fadeToggle(3000)
<% else %>
  $("#puncture").addClass("alert-success")
  $("#puncture").append("<p>")
          .html("<%= @book_type.category %> has been saved")
          .fadeToggle(3000)
<% end %>